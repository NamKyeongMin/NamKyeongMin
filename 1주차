//25703ë²ˆ
#include<stdio.h>

int main() {
	int n;

	scanf_s("%d", &n);

	if (n < 1 || n > 100) {
		return 1;
	}

	if (n == 1) {
		printf("int a;\nint *ptr = &a;");
	}

	else if (n > 1 || n <= 100) {

		printf("int a;\nint *ptr = &a;\nint **ptr2 = &ptr;\n");

		for (int i = 3; i < n + 1; i++) {
			printf("int ");
			for (int j = 0; j < i; j++) {
				printf("*");
			}

			printf("ptr%d = &ptr%d;\n", i, i - 1);

		}
	}
	return 0;
}
