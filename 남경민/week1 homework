#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    int *ptr=0, N=0;

    printf("Type the loop number: \n");
    scanf("%d", &N);

    printf("int a;\n");

    if (N == 1) {
        printf("int *ptr = &a;\n");
    }
    else {
        for (int i = 2; i <= N; i++) {
            int j = 0;
            j = i - 1;
            printf("int *ptr%d = &ptr%d\n", i, j);
        }
    }
}

/*개인적으로 example input으로 컴파일 돌렸을 때는 원하는 출력값이 나왔는데, 백준에 제출하니 틀렸다고 나왔어욥.. 뭐가 문제일까요?*/
